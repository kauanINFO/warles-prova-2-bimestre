1 QUESTÃO

#include <stdio.h>

int main() {
    char operacao;
    float num1, num2, resultado;

    printf("Escolha a operacao (+, -, x, /): ");
    scanf(" %c", &operacao);

    printf("Digite o primeiro numero: ");
    scanf("%f", &num1);

    printf("Digite o segundo numero: ");
    scanf("%f", &num2);

    if (operacao == '+') {
        resultado = num1 + num2;
    } else if (operacao == '-') {
        resultado = num1 - num2;
    } else if (operacao == 'x' || operacao == 'X') {
        resultado = num1 * num2;
    } else if (operacao == '/') {
        resultado = num1 / num2;
    } else {
        printf("Operacao invalida.\n");
        return 1;
    }

    printf("Resultado: %.2f\n", resultado);

    return 0;
}


questão 2 

#include <stdio.h>

int main() {
    int qtd, num;
    int maior, contagem = 0;

    printf("Quantos numeros voce vai digitar? ");
    scanf("%d", &qtd);

    for (int i = 0; i < qtd; i++) {
        printf("Digite o %dº numero: ", i + 1);
        scanf("%d", &num);

        if (i == 0) {
            // Primeiro número lido define o maior inicialmente
            maior = num;
            contagem = 1;
        } else if (num > maior) {
            // Encontrou um novo maior
            maior = num;
            contagem = 1;
        } else if (num == maior) {
            // Número igual ao maior, aumenta a contagem
            contagem++;
        }
    }

    printf("O maior numero foi %d\n", maior);
    printf("Ele apareceu %d vezes\n", contagem);

    return 0;
}


questão 3

#include <stdio.h>

int main() {
    int N, num = 1;

    printf("Digite o numero de linhas: ");
    scanf("%d", &N);

    for (int i = 1; i <= N; i++) { // controla as linhas
        for (int j = 1; j <= i; j++) { // imprime i números na linha
            printf("%d ", num);
            num++;
        }
        printf("\n");
    }

    return 0;
}


questão 4

#include <stdio.h>

int main() {
    float velocidade;

    printf("Qual a velocidade que voce costuma dirigir (km/h)? ");
    scanf("%f", &velocidade);

    if (velocidade > 75) {
        printf("Muito rapido! Multa grave!\n");
    } else if (velocidade > 65) {
        printf("Acima do limite! Reduza a velocidade.\n");
    } else if (velocidade > 55) {
        printf("Velocidade moderada, dirija com cuidado.\n");
    } else if (velocidade > 45) {
        printf("Velocidade segura.\n");
    } else {
        printf("Muito lento! Pode atrapalhar o transito.\n");
    }

    return 0;
}
