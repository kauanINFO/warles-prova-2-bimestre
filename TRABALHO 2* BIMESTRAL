1 QUEST√ÉO

#include <stdio.h>

int main() {
    char operacao;
    float num1, num2, resultado;

    printf("Escolha a operacao (+, -, x, /): ");
    scanf(" %c", &operacao);

    printf("Digite o primeiro numero: ");
    scanf("%f", &num1);

    printf("Digite o segundo numero: ");
    scanf("%f", &num2);

    if (operacao == '+') {
        resultado = num1 + num2;
    } else if (operacao == '-') {
        resultado = num1 - num2;
    } else if (operacao == 'x' || operacao == 'X') {
        resultado = num1 * num2;
    } else if (operacao == '/') {
        resultado = num1 / num2;
    } else {
        printf("Operacao invalida.\n");
        return 1;
    }

    printf("Resultado: %.2f\n", resultado);

    return 0;
}
